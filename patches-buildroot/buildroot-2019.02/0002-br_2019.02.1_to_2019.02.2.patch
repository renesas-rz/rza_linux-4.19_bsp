+-        for (di = 0; di < 16; ++di)
+-            gs_sprintf(hex_output + di * 2, "%02x", digest[di]);
+-        if (strcmp(hex_output, test[i + 1])) {
+-            printf("MD5 (\"%s\") = ", test[i]);
+-            puts(hex_output);
+-            printf("**** ERROR, should be: %s\n", test[i + 1]);
+-            status = 1;
+-        }
+-    }
+-    if (status == 0)
+-        puts("md5 self-test completed successfully.");
+-    return status;
+-}
